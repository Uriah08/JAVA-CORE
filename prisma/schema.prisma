generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id              String   @id @default(uuid())
  status          String
  client          String
  area            String
  dateSurveyed    DateTime
  jobNumber       String   @unique
  poNumber        String?
  woNumber        String?
  reportNumber    String?
  jobDescription  String
  method          String
  inspector       String
  inspectionRoute String
  equipmentUse    String
  dateRegistered  DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("jobs")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  role     String
  jobs     Job[]

  @@map("users")
}
